rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Site config can be read by anyone, but only written by authenticated users.
    match /siteConfig/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to create (submit) a contact message.
    // Only authenticated users (you) can read the list of messages.
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
