rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Allow anyone to read the public site configuration
    match /siteConfig/{docId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow anyone to submit the contact form
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null; // Only authenticated users can manage submissions
    }
  }
}
