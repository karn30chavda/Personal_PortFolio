rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to site configuration
    match /siteConfig/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to submit a contact form message
    match /contactSubmissions/{docId} {
      allow create: if true;
      // Allow only authenticated users to read or delete messages
      allow read, delete: if request.auth != null;
    }
  }
}
