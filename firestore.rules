
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read the public site configuration.
    // Only authenticated users can write to it.
    match /siteConfig/{docId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to create (submit) a message.
    // Only authenticated users can read the submissions.
    match /contactSubmissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
